@model List<LogViewModel>
@{
    ViewData["Title"] = "Logs";
}

<h1>Logs</h1>

<form method="post" asp-controller="Home" asp-action="ShowLog">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <input type="date" class="form-control" name="date" data="@DateTime.Today" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" name="searchContent" placeholder="Search term" />
                </div>
                <div class="col-md-4">
                    <button class="btn btn-primary" type="submit">Search</button>
                </div>
            </div>
        </div>
    </div>
</form>
